.position-detail.container
  h1 Here are the details of the position
  form(ng-submit='save()', name='form', novalidate='')
    input.form-control(type='text', placeholder='Name', ng-model='position.name')
    select.form-control(ng-model='position.company',ng-options='item._id as item.name for item in companies')
    span.input-group-btn
      input.btn.btn-primary(type='submit', value='Save')
      input.btn(type='button', ng-click='reset()', value='Reset')
